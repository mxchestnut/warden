# Environment Configuration Template
# Copy this to .env and fill in your actual values

# Environment
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@host/database?sslmode=require

# Session Secret (generate a random string)
SESSION_SECRET=change-this-to-a-random-secret

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=warden-documents

# Discord Bot Token
WARDEN_BOT_TOKEN=your-discord-bot-token

# Gemini API Key
GEMINI_API_KEY=your-gemini-api-key

# Tailscale (optional)
TAILSCALE_NETWORK=your-tailnet-name

# Redis (optional - set to false to use in-memory sessions)
USE_REDIS=false

# Sentry Error Tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
